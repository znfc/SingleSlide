<?xml version="1.0" encoding="utf-8"?>
<com.well.swipe.view.CheckItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/check_item_selector">

    <TextView
        android:id="@+id/check_item_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/preference_item_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/check_item_margin"
        android:layout_marginStart="@dimen/check_item_margin"
        android:gravity="center_vertical"
        android:textColor="@color/ksw_md_solid_checked" />

    <CheckBox
        android:id="@+id/check_item_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/check_item_margin"
        android:layout_marginRight="@dimen/check_item_margin"
        android:button="@drawable/swipe_checkbox"
        android:clickable="false" />
</com.well.swipe.view.CheckItemLayout>