<?xml version="1.0" encoding="utf-8"?>
<com.well.swipe.preference.PreferenceTitleSummary xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/preference_height"
    android:background="@drawable/check_item_selector"
    android:gravity="center_vertical">

    <ImageView
        android:id="@id/preference_icon"
        android:layout_width="@dimen/preference_item_icon_size"
        android:layout_height="@dimen/preference_item_icon_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@id/preference_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/preference_icon"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@id/preference_icon"
        android:layout_toRightOf="@id/preference_icon"
        android:textColor="@color/white"
        android:textSize="@dimen/preference_item_title_size" />

    <TextView
        android:id="@id/preference_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/preference_title"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/preference_icon"
        android:maxLines="1"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/preference_item_summary_size" />

    <ImageView
        android:id="@id/preference_arraw"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:visibility="gone"
        android:src="@drawable/arrow_white" />

</com.well.swipe.preference.PreferenceTitleSummary>